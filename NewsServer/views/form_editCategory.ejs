<% include ./partials/header%>

<div class="ui main text container segment">
    <div class="ui huge header">
        Edit Category
    </div>
    <form class="ui form" action="/categories/<%=category.ID%>/?_method=PUT" method="POST">
    <div class="field">
        <label>Category name</label>
        <input type="text" name="name" placeholder="Title" value="<%=category.NAME%>">
    </div>

    <div class="field">
        <label>Category Description</label>
        <textarea rows="10" cols="40" name="description"><%=category.DESCRIPTION%></textarea>
    </div>
    
    <br>
    <input class="ui blue inverted button" type="submit" name="" value="Add">
    </form>
</div>
<% include ./partials/footer%>